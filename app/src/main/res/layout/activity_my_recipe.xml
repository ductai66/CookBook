<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MyRecipeActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_myrecipe"
        android:background="#F35C2C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_myrecipe"
            android:text="Công thức của tôi"
            android:textColor="#F9FAF1"
            android:textSize="18sp"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_add_recipe"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_add"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </androidx.appcompat.widget.Toolbar>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_myRecipe"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>